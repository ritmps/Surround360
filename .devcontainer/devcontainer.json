{
    "name": "CUDA 10.x Container",
    "build": {
        "dockerfile": "Dockerfile",
        // "args": {
        //     "BUILDKIT_INLINE_CACHE": "1"
        //   }
        "context": ".."
    },
    "runArgs": ["--privileged", "--gpus", "all"],

    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            },
            "extensions": [
                "ms-vscode.cpptools",
                "ms-azuretools.vscode-docker",
                "twxs.cmake",
                "ms-vscode.cmake-tools",
                "ms-python.python"
            ]
        }
    },

    // "postCreateCommand": "apt-get update && apt-get install -y build-essential cmake git",
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
    ],
    "forwardPorts": [
        // List any ports you want to forward
    ],    
    "workspaceFolder": "/workspace",
    "remoteUser": "root"
}
